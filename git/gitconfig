    dif = diff --no-ext-diff
    unpushed = log @{u}.. --pretty=format:'%h %an %s'
    all-unpushed = log --all --not --remotes --tags --pretty=format:'[%d] %h %an %s'

[diff]
    renames = true
	external = /home/erik/git-diff-wrapper.sh

[push]
	default = matching
