# Make sure no imap_user lingers when switching to any imap account
account-hook . 'unset imap_user' 

# For every server, set the imap_user.  
# Don't set the password - I'll enter it when prompted

account-hook "imaps://user@imap.gmail.com" \
  'set imap_user=user@gmail.com'

account-hook "imaps://user@imap.gmail.com" \
  'set imap_user=user@gmail.com'

account-hook "imaps://mailserver.domain.com" \
  'set imap_user=user@domain.com'
